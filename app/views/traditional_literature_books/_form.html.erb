<div class="container form-section">

  <%= form_with(model: traditional_literature_book, local: true) do |form| %>
    <% if traditional_literature_book.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(traditional_literature_book.errors.count, "error") %> prohibited this from being saved:</h2>

        <ul>
          <% traditional_literature_book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
      <div class="col-md">
        <div class="field input-group mb-3">
          <div class="input-group-text">Book Title</div>
          <%= form.text_field :title, class:'form-control' %>
        </div>
      </div>

      <div class="col-md">
        <div class="field input-group mb-3">
          <div class="input-group-text">Date Finished</div>
          <%= form.date_field :date_finished, class:'form-control' %>
        </div>
      </div>
    </div>

      <div class="row">
        <div class="col-md">
          <div class="field input-group mb-3">
            <div class="input-group-text">Number of Pages</div>
            <%= form.number_field :pages, class:'form-control' %>
          </div>
        </div>

        <div class="col-md">
          <div class="field input-group mb-3">
            <div class="input-group-text">Author</div>
            <%= form.text_field :author, class:'form-control' %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md">
          <div class="field input-group mb-3">
            <div class="input-group-text">Illustrator</div>
            <%= form.text_field :illustrator, class:'form-control' %>
          </div>
        </div>

        <div class="col-md">
          <div class="field input-group mb-3">
            <div class="input-group-text">Country of Origin</div>
            <%= form.text_field :country, class:'form-control' %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md">
          <div class="field input-group mb-3">
            <div class="input-group-text">Type of Characters</div>
            <%= form.text_field :characters, class:'form-control' %>
          </div>
        </div>

        <div class="col-md">
          <div class="field input-group mb-3">
            <div class="input-group-text">Date Finished</div>
            <%= form.text_field :setting, class:'form-control' %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md">
          <div class="field input-group mb-3">
            <div class="input-group-text">Problem</div>
            <%= form.text_area :problem, class:'form-control' %>
          </div>
        </div>

        <div class="col-md">
          <div class="field input-group mb-3">
            <div class="input-group-text">Solution</div>
            <%= form.text_area :solution, class:'form-control' %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-6 col-md-7">
          <fieldset class="row mb-3">
            <div class="input-group">
              <div class="input-group-text">Your Rating</div>
              <div class="col-sm-2 text-center">
                <div class="form-check">
                  <%= form.radio_button :rating, "Yuck" %> &#128541;<br> Yuck
                </div>
              </div>
      
              <div class="col-sm-2 text-center">
                <div class="form-check">
                  <%= form.radio_button :rating, "Meh" %> &#128528;<br> Meh
                </div>
              </div>
      
              <div class="col-sm-2 text-center">
                <div class="form-check text-center">
                  <%= form.radio_button :rating, "Good" %> &#128578;<br> Good
                </div>
              </div>
      
              <div class="col-sm-2 text-center">
                <div class="form-check">
                  <%= form.radio_button :rating, "Awesome" %> &#128516;<br> Awesome
                </div>
              </div>

            </div>
          </fieldset>
        </div>

        <div class="col-lg-6 col-md-5">
          <div class="field input-group mb-3">
            <div class="input-group-text">Rating Rationale</div>
            <%= form.text_area :rationale, class:'form-control', placeholder:'I gave it a ___ rating because...' %>
          </div>
        </div>
      </div>

    <div class="actions">
      <%= form.submit class:'btn btn-success' %>
    </div>
    <br>
  <% end %>
    
</div>
