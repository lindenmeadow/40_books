<%= form_with(model: science_fiction_book, local: true) do |form| %>
  <% if science_fiction_book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(science_fiction_book.errors.count, "error") %> prohibited this science_fiction_book from being saved:</h2>

      <ul>
        <% science_fiction_book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
      <div class="col-md">
        <label class="form-label">Book Title</label>
        <div class="field mb-3">
          <%= form.text_field :title, class:'form-control' %>
        </div>
      </div>

      <div class="col-md">
        <label class="form-label">Date Finished</label>
        <div class="field mb-3">
          <%= form.date_field :date_finished, class:'form-control' %>
        </div>
      </div>
  </div>

  <div class="row">
     <div class="col-md">
        <label class="form-label">Number of Pages</label>
        <div class="field mb-3">
          <%= form.number_field :pages, class:'form-control' %>
        </div>
      </div>

      <div class="col-md">
        <label class="form-label">Author</label>
        <div class="fieldmb-3">
          <%= form.text_field :author, class:'form-control' %>
        </div>
      </div>
  </div>

<div class="row">
  <div class="col-md">
    <label class="form-label">Illustrator</label>
    <div class="fieldmb-3">
      <%= form.text_field :illustrator, class:'form-control', placeholder:"(If no illustrator, put 'none')" %>
    </div>
  </div>

  <div class="col-md">
    <label class="form-label">I know this book is science fiction because...</label>
    <div class="field mb-3">
      <%= form.text_area :genre_explanation, class:'form-control' %>
    </div>
  </div>
</div>

<div class="row">
    <div class="col-md">
        <label class="form-label">Main Characters</label>
        <div class="field mb-3">
          <%= form.text_field :main_characters, class:'form-control' %>
        </div>
    </div>

    <div class="col-md">
        <label class="form-label">Setting</label>
        <div class="field mb-3">
          <%= form.text_field :setting, class:'form-control' %>
        </div>
    </div>
</div>
  
<div class="row">
    <div class="col-md">
        <label class="form-label">Problem</label>
        <div class="field mb-3">
          <%= form.text_area :problem, class:'form-control' %>
        </div>
    </div>

    <div class="col-md">
        <label class="form-label">Solution</label>
        <div class="field mb-3">
          <%= form.text_area :solution, class:'form-control' %>
        </div>
    </div>
</div>
 
<div class="row">
      <div class="col-md">
          <fieldset class="row mb-3">
            <label class="form-label">Your Rating</label>
            <div class="input-group">
              <div class="col-sm-2 text-center">
                <div class="form-check">
                  <%= form.radio_button :rating, "Yuck" %> &#128541;<br> Yuck
                </div>
              </div>
      
              <div class="col-sm-2 text-center">
                <div class="form-check">
                  <%= form.radio_button :rating, "Meh" %> &#128528;<br> Meh
                </div>
              </div>
      
              <div class="col-sm-2 text-center">
                <div class="form-check text-center">
                  <%= form.radio_button :rating, "Good" %> &#128578;<br> Good
                </div>
              </div>
      
              <div class="col-sm-2 text-center">
                <div class="form-check">
                  <%= form.radio_button :rating, "Awesome" %> &#128516;<br> Awesome
                </div>
              </div>

            </div>
          </fieldset>
      </div>

      <div class="col-md">
          <label class="form-label">Rating Rationale</label>
          <div class="field mb-3">
            <%= form.text_area :rationale, class:'form-control', placeholder:'I gave it a ___ rating because...' %>
          </div>
      </div>
  </div>

  <div class="actions">
    <%= form.submit "Submit", class:'btn btn-success' %>
  </div>
  <br>
<% end %>
